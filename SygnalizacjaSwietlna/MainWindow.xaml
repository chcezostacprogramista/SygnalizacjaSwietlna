<Window x:Class="SygnalizacjaSwietlna.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SygnalizacjaSwietlna"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Rectangle HorizontalAlignment="Center" Height="90" Margin="0,178,0,0" Stroke="Black" VerticalAlignment="Top" Width="36"/>
        <Ellipse x:Name="ddd" HorizontalAlignment="Center" Height="20" Margin="0,186,0,0" Stroke="Black" VerticalAlignment="Top" Width="20" Fill="{Binding SwiatloGorne,  Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
        <Ellipse HorizontalAlignment="Center" Height="20" Margin="0,213,0,0" Stroke="Black" VerticalAlignment="Top" Width="20"  Fill="{Binding SwiatloSrodkowe,  Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
        <Ellipse HorizontalAlignment="Center" Height="20" Margin="0,238,0,0" Stroke="Black" VerticalAlignment="Top" Width="20"  Fill="{Binding SwiatloDolne,  Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>


    </Grid>
</Window>
